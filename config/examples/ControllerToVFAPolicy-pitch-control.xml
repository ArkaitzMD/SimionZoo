<?xml version="1.0" encoding="utf-8"?>
<Controller-To-VFA-Policy>
  <World>
    <Dynamic-Model>
      <Pitch-control>
        <World-Definition>..\config\world\pitch-control.xml</World-Definition>
        <Set-Point-File>..\config\world\pitch-control\setpoint.txt</Set-Point-File>
      </Pitch-control>
    </Dynamic-Model>
    <Delta-T>0.05</Delta-T>
    <Num-Integration-Steps>4</Num-Integration-Steps>
    <Reward>
      <Min>-100</Min>
      <Max>1.0</Max>
      <Reward-components>
        <Deviation-Component>
          <Weight>1.0</Weight>
          <Tolerance>0.02</Tolerance>
          <Variable>control-deviation</Variable>
        </Deviation-Component>
      </Reward-components>
    </Reward>
  </World>
