    <Num-Episodes>1000</Num-Episodes>
    <Episode-Length>360</Episode-Length>
    <Random-Seed>1</Random-Seed>
    <Eval-Freq>50</Eval-Freq>
    <Log>
      <Freq>0.25</Freq>
      <Ouput-directory>wind-turbine-2</Ouput-directory>
      <Prefix>wt-learn-vidal</Prefix>
      <Log-eval-episodes>true</Log-eval-episodes>
      <Log-training-episodes>false</Log-training-episodes>
      <Log-eval-avg-rewards>true</Log-eval-avg-rewards>
    </Log>
  </Experiment>-->
  
  <Controller>
    <Multi-Controller>
      <LQR>
        <Output-Action>pitch</Output-Action>
        <LQR-Gain>
          <Variable>attack-angle</Variable>
          <Gain>-0.6435</Gain>
        </LQR-Gain>
        <LQR-Gain>
          <Variable>pitch-rate</Variable>
          <Gain>169.695</Gain>
        </LQR-Gain>
        <LQR-Gain>
          <Variable>control-deviation</Variable>
          <Gain>-7.0711</Gain>
        </LQR-Gain>
      </LQR>
    </Multi-Controller>
  </Controller>
  
  <Multi-Output-VFA>
    <Single-Output-VFA>
      <Output-Action>pitch</Output-Action>
      <Linear-VFA>
        <RBF-Grid>
          <RBF-Grid-Dimension>
            <Variable>attack-angle</Variable>
            <Num-Features>200</Num-Features>
            <Distribution>linear</Distribution>
          </RBF-Grid-Dimension>
          <RBF-Grid-Dimension>
            <Variable>pitch-rate</Variable>
            <Num-Features>200</Num-Features>
            <Distribution>linear</Distribution>
          </RBF-Grid-Dimension>
          <RBF-Grid-Dimension>
            <Variable>control-deviation</Variable>
            <Num-Features>200</Num-Features>
            <Distribution>linear</Distribution>
          </RBF-Grid-Dimension>
        </RBF-Grid>
      </Linear-VFA>
    </Single-Output-VFA>
  </Multi-Output-VFA>
  
  <Output-File>../data/pitch-200.bin</Output-File>
</Controller-To-VFA-Policy>