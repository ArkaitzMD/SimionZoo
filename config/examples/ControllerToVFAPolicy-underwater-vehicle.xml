<?xml version="1.0" encoding="utf-8"?>
<Controller-To-VFA-Policy>
  <World>
    <Dynamic-Model>
      <Underwater-vehicle>
        <World-Definition>..\config\world\underwater-vehicle.xml</World-Definition>
        <Set-Point-File>..\config\world\underwater-vehicle\setpoint.txt</Set-Point-File>
      </Underwater-vehicle>
    </Dynamic-Model>
    <Delta-T>0.01</Delta-T>
    <Num-Integration-Steps>4</Num-Integration-Steps>
    <Reward>
      <Min>-100</Min>
      <Max>1.0</Max>
      <Reward-components>
        <Deviation-Component>
          <Weight>1.0</Weight>
          <Tolerance>0.1</Tolerance>
          <Variable>v-deviation</Variable>
        </Deviation-Component>
      </Reward-components>
    </Reward>
  </World>
  <!--<Experiment>
    <Num-Episodes>1000</Num-Episodes>
