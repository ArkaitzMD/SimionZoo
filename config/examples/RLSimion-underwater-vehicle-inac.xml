<?xml version="1.0" encoding="utf-8"?>
<RLSimion>
  <World>
    <Dynamic-Model>
      <Underwater-vehicle>
        <World-Definition>..\config\world\underwater-vehicle.xml</World-Definition>
        <Set-Point-File>..\config\world\underwater-vehicle\setpoint.txt</Set-Point-File>     
      </Underwater-vehicle>
    </Dynamic-Model>
    <Delta-T>0.03</Delta-T>
    <Num-Integration-Steps>4</Num-Integration-Steps>
    <Reward>
      <Min>-100</Min>
      <Max>1.0</Max>
      <Reward-components>
        <Deviation-Component>
          <Weight>1.0</Weight>
          <Tolerance>0.1</Tolerance>
          <Variable>v-deviation</Variable>
        </Deviation-Component>
      </Reward-components>
    </Reward>
  </World>
  <Experiment>
    <Num-Episodes>1000</Num-Episodes>
    <Episode-Length>200</Episode-Length>
    <Random-Seed>1</Random-Seed>
    <Eval-Freq>50</Eval-Freq>
    <Log>
      <Freq>0.0</Freq>
      <Ouput-directory>underwater-vehicle</Ouput-directory>
      <Prefix>uv-learn</Prefix>
      <Log-eval-episodes>true</Log-eval-episodes>
      <Log-training-episodes>false</Log-training-episodes>
      <Log-eval-avg-rewards>true</Log-eval-avg-rewards>
    </Log>
  </Experiment>
  <SimGod>
    <Actor>
      <VFA-Learner>
        <Load>..\data\uv-policy-3.bin</Load>
        <Outputs>
          <Incremental-Natural-Actor>
            <VFA-Policy>
              <Output-Action>u_thrust</Output-Action>
              <Linear-VFA>
                <RBF-Grid>
                  <RBF-Grid-Dimension>
                    <Variable>v-deviation</Variable>
                    <Num-Features>5000</Num-Features>
                    <Distribution>linear</Distribution>
                  </RBF-Grid-Dimension>
                </RBF-Grid>
              </Linear-VFA>
              <Exploration-Noise>
                <Sigma>
                  <Linear-Schedule>
                    <Start-Offset>0.0</Start-Offset>
                    <Pre-Offset-Value>0.0</Pre-Offset-Value>
                    <Interpolation>linear</Interpolation>
                    <Initial-Value>0.01</Initial-Value>
                    <End-Value>0.001</End-Value>
                    <Evaluation-Value>0.0</Evaluation-Value>
                  </Linear-Schedule>
                </Sigma>
              </Exploration-Noise>
            </VFA-Policy>
            <Gamma>0.9</Gamma>
            <E-Traces>
              <Replace>true</Replace>
              <Lambda>0.9</Lambda>
              <Threshold>0.0001</Threshold>
            </E-Traces>
            <Alpha-v>
              <Linear-Schedule>
                <Interpolation>linear</Interpolation>
                <Initial-Value>0.1</Initial-Value>
                <End-Value>0.0</End-Value>
                <Evaluation-Value>0.0</Evaluation-Value>
              </Linear-Schedule>
            </Alpha-v>
            <Alpha-u>
              <Linear-Schedule>
                <Interpolation>linear</Interpolation>
                <Initial-Value>0.01</Initial-Value>
                <End-Value>0.0</End-Value>
                <Evaluation-Value>0.0</Evaluation-Value>
              </Linear-Schedule>
            </Alpha-u>
          </Incremental-Natural-Actor>
        </Outputs>
      </VFA-Learner>
    </Actor>
    <Critic>
      <VFA-Critic>
        <Incremental-Natural-Critic>
          <Linear-VFA>
            <RBF-Grid>
              <RBF-Grid-Dimension>
                <Variable>v-deviation</Variable>
                <Num-Features>5000</Num-Features>
                <Distribution>linear</Distribution>
              </RBF-Grid-Dimension>
            </RBF-Grid>
          </Linear-VFA>
          <E-Traces>
            <Replace>true</Replace>
            <Lambda>0.9</Lambda>
            <Threshold>0.0001</Threshold>
          </E-Traces>
          <Gamma>0.9</Gamma>
          <Alpha-v>
            <Linear-Schedule>
              <Interpolation>linear</Interpolation>
              <Initial-Value>0.1</Initial-Value>
              <End-Value>0.0</End-Value>
              <Evaluation-Value>0.0</Evaluation-Value>
            </Linear-Schedule>
          </Alpha-v>
          <Alpha-r>0.9</Alpha-r>
        </Incremental-Natural-Critic>
      </VFA-Critic>
    </Critic>
  </SimGod>
</RLSimion>