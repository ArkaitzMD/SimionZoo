<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:v="clr-namespace:Badger.Views"
             xmlns:vm="clr-namespace:Badger.ViewModels"
             xmlns:cal="http://www.caliburnproject.org" x:Class="Badger.Views.ConfigNodeView"
             mc:Ignorable="d" d:DesignHeight="50" d:DesignWidth="300"
             Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
    <Grid Background="Yellow">
        <TreeView BorderThickness="0" Background="Red" Margin="-15,0,0,0" ItemsSource="{Binding children}">
            <TreeViewItem IsExpanded="True" >
                <TreeViewItem.Header>
                    <StackPanel Orientation="Horizontal" Focusable="False">
                        <Label Background="AliceBlue" Content="{Binding name}" ToolTip="{Binding comment}" Tag="{Binding DataContext,RelativeSource={RelativeSource Mode=Self}}"/>
                    </StackPanel>
                </TreeViewItem.Header>
                <!--<ContentControl x:Name="children" Margin="-10,0,0,0"/>-->
            </TreeViewItem>
        </TreeView>
    </Grid>
</UserControl>
