<UserControl x:Class="Badger.Views.ExperimentQueueMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:Badger.ViewModels"
             xmlns:v="clr-namespace:Badger.Views"
             mc:Ignorable="d"  
             d:DesignHeight="400" d:DesignWidth="440">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <BitmapImage x:Key="plot" UriSource="/images/plot.png" />
    </UserControl.Resources>
    
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="estimatedEndTime" TextAlignment="Center" FontSize="11" Foreground="#616161" Margin="5,5,5,0"
                           Visibility="{Binding bRunning, Converter = {StaticResource BoolToVis}}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ProgressBar Grid.Column="0"  x:Name="GlobalProgress" Height="10" Width="Auto" Minimum="0" Maximum="100" Margin="5"
            		Visibility="{Binding bRunning, Converter = {StaticResource BoolToVis}}" />
            <Button Grid.Column="1" x:Name="ShowReports" IsEnabled="{Binding bFinished}" 
            		Margin="0,5,5,5" Width="90" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <Label Content="REPORTS"/>
                    <Image Source="{StaticResource plot}" Width="25"/>
                </StackPanel>
            </Button>
        </Grid>

        <ListView x:Name="monitoredExperiments" 
              ItemsSource="{Binding Path=monitoredExperimentBatchList}" >
            <ListView.Resources>
                <DataTemplate  DataType="{x:Type vm:MonitoredExperimentViewModel}">
                    <v:MonitoredExperimentView Width="Auto"/>
                </DataTemplate>
            </ListView.Resources>
        </ListView>
    </StackPanel>
</UserControl>
