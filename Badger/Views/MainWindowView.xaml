    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:ExperimentEditorWindowViewModel}">
            <v:ExperimentEditorWindowView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReportsWindowViewModel}">
            <v:ReportsWindowView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ExperimentMonitorWindowViewModel}">
            <v:ExperimentEditorWindowView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <TabControl Margin="0" Padding="0" SelectedIndex="{Binding SelectedScreenIndex}">
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource Edit}" Stretch="Fill" Width="24" Height="24" Fill="#89000000" />
                        <Label>Editor</Label>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <ContentControl x:Name="EditorWindowVM"/>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource Monitor}" Stretch="Fill" Width="24" Height="24" Fill="#89000000" />
                        <Label>Monitor</Label>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <ContentControl x:Name="MonitorWindowVM"/>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource Plot}" Width="24" Height="24" Fill="#89000000" />
                        <Label>Reports</Label>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <ContentControl x:Name="ReportWindowVM"/>
                </TabItem.Content>
            </TabItem>
