<Window x:Class="Badger.Views.ReportsWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Badger.ViewModels"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:v="clr-namespace:Badger.Views"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        WindowStyle="ThreeDBorderWindow"
        Title="Report Viewer" Width="1100" Height="800"
        Background="#eeeeee"
        WindowState="Normal"
        Icon="/badger-head.ico">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <DataTemplate DataType="{x:Type vm:LoggedExperimentViewModel}">
            <v:LoggedExperimentView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LoggedExperimentalUnitViewModel}">
            <v:LoggedExperimentalUnitView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LoggedForkViewModel}">
            <v:LoggedForkView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LoggedVariableViewModel}">
            <v:LoggedVariableView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReportViewModel}">
            <v:ReportView/>
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="48" Width="Auto" Background="#EEEEEE" Margin="4,0">
            <Button Style="{StaticResource BadgerButtonStyle}" ToolTip="Load a batch: results from an experiment execution"
                    Width="40" Height="40" x:Name="LoadExperimentBatch">
                <Path Data="{StaticResource Open}" Width="24" Height="24" Fill="#89000000" />
            </Button>
            <Button Style="{StaticResource BadgerButtonStyle}" ToolTip="Save Report"
                    Width="40" Height="40" cal:Message.Attach="[Event Click]=[Action SaveReports()]"
                    IsEnabled="{Binding CanSaveReports}">
                <Path Data="{StaticResource Save}" Width="24" Height="24" Fill="#89000000" />
            </Button>
            <StackPanel VerticalAlignment="Center" Visibility="{Binding LogsLoaded,Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                <Label Width="880" HorizontalContentAlignment="Right" Content="{Binding LoadedBatch}"/>
            </StackPanel>
        </StackPanel>
        <Grid Background="#FAFAFA" Visibility="{Binding LogsLoaded,Converter={StaticResource BoolToVis}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="15" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="780" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Margin="5,5,0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="150" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="Auto" MinHeight="30" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="DarkGray" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Background="#EEEEEE">
                            <Label Content="Experiment batch" FontWeight="Medium" HorizontalAlignment="Center" />
                            <TabControl>
                                <TabItem Header="Experiment/fork hierarchy" >
                                    <ScrollViewer Grid.Row="1" Height="100" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                        <ItemsControl x:Name="LoggedExperiments"/>
                                    </ScrollViewer>
                                </TabItem>
                                <TabItem Header="Experimental units">
                                    <ScrollViewer  Grid.Row="1" Height="100" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                        <StackPanel Orientation="Vertical">
                                            <ItemsControl x:Name="ExperimentalUnits" />
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>
                            </TabControl>
                        </StackPanel>
                    </Grid>
                </Border>
                <GridSplitter Grid.Row="1" Height="5" Background="#FAFAFA" HorizontalAlignment="Stretch" />

                <Border Grid.Row="2" BorderBrush="DarkGray" BorderThickness="1">
                    <StackPanel >
                        <!--<Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>-->

                        <!--<StackPanel Grid.Row="0" Background="#EEEEEE">
                            <Label Content="Variable Selection" FontWeight="Medium" VerticalContentAlignment="Center" HorizontalAlignment="Center" />
                        </StackPanel>-->

                        <!--<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">-->
                        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="2">
                            <GroupBox Header="Variable selection" Margin="0,2,0,2" ToolTip="Which variables do we want to display?"
                                        MaxHeight="120" MinHeight="50">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="Variables"/>
                                </ScrollViewer>
                            </GroupBox>

                            <StackPanel Orientation="Horizontal" ToolTip="Sets whether all variations of the experiments will be considered or just selected ones">
                                <CheckBox VerticalAlignment="Center" x:Name="UseForkSelection"/>
                                <Label  Width="100" FontSize="10" Margin="0,0,10,0" Content="Use fork selection" HorizontalContentAlignment="Left"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox VerticalAlignment="Center" x:Name="ResampleData"/>
                                <Label  Width="100" FontSize="10" Margin="0,0,10,0" Content="Resample data" HorizontalContentAlignment="Left"/>
                                <TextBox x:Name="ResamplingNumPoints" FontSize="10" Width="20" VerticalAlignment="Center"
                                         IsEnabled="{Binding ResampleData,Converter={StaticResource BoolToVis}}">100</TextBox>
                            </StackPanel>

                            <GroupBox Header="Track groups" Visibility="{Binding GroupsEnabled,Converter={StaticResource BoolToVis}}">
                                <StackPanel Orientation="Vertical" Margin="0">
                                    <StackPanel Orientation="Horizontal" 
                                            ToolTip="Forks currently used to group results">
                                        <Label FontSize="10" Width="100" Margin="0,0,10,0" Content="Tracks grouped by" VerticalContentAlignment="Center"
                                            HorizontalContentAlignment="Right"/>
                                        <Grid Margin="0,2,0,2" ToolTip="Which variables do we want to display?" Width="134"
                                            MaxHeight="56">
                                            <Border BorderThickness="1" BorderBrush="#BDBDBD" >
                                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                    <ItemsControl x:Name="GroupByForks" Margin="3"/>
                                                </ScrollViewer>
                                            </Border>
                                        </Grid>

                                        <Button x:Name="ResetGroupBy" Margin="4,0,0,0" Width="24" Height="24">
                                            <Path Data="{StaticResource  Close}" Width="24" Height="24" Fill="#89000000"
                                                HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Button>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" ToolTip="How do we pick the best track from each group?">
                                        <Label Width="100" Margin="0,0,10,0" FontSize="10" Content="In-group selection" HorizontalContentAlignment="Right" />
                                        <ComboBox x:Name="inGroupSelectionFunctions" SelectedValue="{Binding selectedInGroupSelectionFunction}"
                                        Width="80" Margin="0,0,4,0" HorizontalAlignment="Center"/>
                                        <ComboBox ItemsSource="{Binding Variables}" DisplayMemberPath="name"
                                                SelectedValuePath="name" SelectedValue="{Binding selectedInGroupSelectionVariable}"
                                        Width="80" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Tracks">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Margin="0,2,0,2" Orientation="Horizontal" ToolTip="This limits the maximum number of tracks to be displayed">
                                        <Label FontSize="10" Width="100" Margin="0,0,10,0" Content="Maximum Number" HorizontalContentAlignment="Right"/>
                                        <ComboBox x:Name="limitToOptions" SelectedValue="{Binding selectedLimitToOption}"
                                            Width="80" Margin="0,0,10,0" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,2,0,2" Orientation="Horizontal" ToolTip="Sets the criteria by which tracks are sorted before limiting">
                                        <Label Width="100" Margin="0,0,10,0" FontSize="10" Content="Track selection" HorizontalContentAlignment="Right"/>
                                        <ComboBox x:Name="orderByFunctions" SelectedValue="{Binding selectedOrderByFunction}"
                                            Width="80" Margin="0,0,4,0" HorizontalAlignment="Center"/>
                                        <ComboBox ItemsSource="{Binding Variables}" DisplayMemberPath="name"
                                                    SelectedValuePath="name" SelectedValue="{Binding selectedOrderByVariable}"
                                            Width="80" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                        <!--</ScrollViewer>-->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="MakeReport"  HorizontalAlignment="Center" BorderBrush="SlateGray"
                                                    Height="30" IsEnabled="{Binding CanGenerateReports}" >
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center" Margin="2"><Run Text="Generate Reports"/></TextBlock>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Width="4" Background="#FAFAFA"
                          x:Name="GridSplitter" HorizontalAlignment="Stretch" />

            <Border Grid.Row="0" Grid.Column="2" BorderBrush="DarkGray" BorderThickness="1" Margin="0,5,5,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Background="#EEEEEE">
                        <Label Content="Reports" FontWeight="Medium" HorizontalAlignment="Center" />
                    </StackPanel>

                    <TabControl Margin="0" Padding="0"  Grid.Row="1" x:Name="Reports"
                                SelectedItem="{Binding SelectedReport}">
                        <TabControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="{Binding name}" VerticalAlignment="Center" BorderBrush="Transparent"/>
                                    <Button Style="{StaticResource BadgerButtonStyle}" Width="18" Height="18">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <cal:ActionMessage MethodName="Close" >
                                                    <cal:Parameter Value="{Binding BindsDirectlyToSource=True}" />
                                                </cal:ActionMessage>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                        <Path Data="{StaticResource Close}" Width="24" Height="24" Fill="#89000000"
                                              HorizontalAlignment="Center" VerticalAlignment="Center" Margin="3" />
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </TabControl.ItemTemplate>
                    </TabControl>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
