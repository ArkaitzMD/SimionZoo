    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="460"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="400"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <oxy:PlotView Grid.Row="0" Model="{Binding Plot}" Width="600" Height="400" Margin="10,0"/>
                <!--<xctk:CheckListBox Grid.Row="1" Visibility="{Binding LineSeriesSelectionVisible, Converter={StaticResource BoolToVis}}" ItemsSource="{Binding properties.lineSeriesProperties, Mode=OneWay, NotifyOnSourceUpdated=True}"
