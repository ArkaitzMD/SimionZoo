             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:v="clr-namespace:Badger.Views"
             xmlns:vm="clr-namespace:Badger.ViewModels"
             xmlns:cal="http://www.caliburnproject.org" x:Class="Badger.Views.BranchConfigView"
             mc:Ignorable="d" 
                d:DesignHeight="50" d:DesignWidth="300">
    <!--Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">-->
    <UserControl.Resources>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="White"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="White"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White"/>

    </UserControl.Resources>
    <!--<Label Foreground="Red" Content="harl"></Label>-->
    <TreeViewItem IsExpanded="True" Margin="-15,0,0,0">
        <TreeViewItem.Header>
            <StackPanel Orientation="Horizontal" Focusable="False">
                <Label Content="{Binding name}" ToolTip="{Binding comment}"><!--Tag="{Binding DataContext,RelativeSource={RelativeSource Mode=Self}}">-->
                </Label>
            </StackPanel>
        </TreeViewItem.Header>

        <ItemsControl x:Name="children"/>
    </TreeViewItem>

