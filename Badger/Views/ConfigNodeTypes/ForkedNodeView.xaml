<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:v="clr-namespace:Badger.Views"
             xmlns:vm="clr-namespace:Badger.ViewModels"
             xmlns:cal="http://www.caliburnproject.org" x:Class="Badger.Views.ForkedNodeView"
             mc:Ignorable="d" d:DesignHeight="50" d:DesignWidth="300">

    <StackPanel Orientation="Vertical" Height="20">
        <StackPanel Orientation="Horizontal">
            <StackPanel Margin="10,0,0,0" Background="Black" Width="22">
                <Image Source="/images/fork.png" Width="20" Height="20"/>
            </StackPanel>
            <Label Margin="4,0,0,0" Content="{Binding name}" FontSize="8"></Label>
        </StackPanel>
        <ContentControl x:Name="selectedForkValue" />
        <Label Content="lask jdf"></Label>
    </StackPanel>
</UserControl>
