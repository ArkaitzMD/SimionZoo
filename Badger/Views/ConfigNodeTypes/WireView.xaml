<UserControl x:Class="Badger.Views.WireView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Badger.Views"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <TextBox Text="{Binding Name}" MaxLength="20" MaxWidth="80" Width="80"
                             VerticalAlignment="Center" Background="Transparent" BorderThickness="0" Margin="4,5"/>
        <Button Background="{x:Null}" BorderBrush="{x:Null}" cal:Message.Attach="[Event Click]=[Action Remove()]"
                        ToolTip="Remove this value" Width="16">
            <Path Data="{StaticResource Close}" Stretch="Uniform" Fill="#89000000" />
        </Button>
    </StackPanel>
</UserControl>
