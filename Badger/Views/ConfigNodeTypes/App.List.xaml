<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:v="clr-namespace:Badger.Views"
             xmlns:vm="clr-namespace:Badger.ViewModels"
             xmlns:cal="http://www.caliburnproject.org" x:Class="Badger.Views.App.List"
             mc:Ignorable="d" d:DesignHeight="50" d:DesignWidth="300">
    <Border BorderThickness="2" BorderBrush="DarkGray">
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <TextBox Text="" Margin="2" Width="100" x:Name="name"/>
            <Label Content="{Binding numForkCombinations}" FontSize="8"/>
        </StackPanel>
    </Border>

</UserControl>
