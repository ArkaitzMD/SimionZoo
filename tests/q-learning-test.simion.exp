<RLSimion FileVersion="1.0.0.0">
  <RLSimion>
    <Log>
      <Log-Freq>0.25</Log-Freq>
      <Log-eval-episodes>True</Log-eval-episodes>
      <Log-training-episodes>False</Log-training-episodes>
    </Log>
    <World>
      <Num-Integration-Steps>4</Num-Integration-Steps>
      <Delta-T>0.01</Delta-T>
      <Dynamic-Model>
        <Model>
          <Underwater-vehicle>
            <Set-Point-File>../config/world/underwater-vehicle/setpoint.txt</Set-Point-File>
          </Underwater-vehicle>
        </Model>
      </Dynamic-Model>
    </World>
    <Experiment>
      <Random-Seed>1</Random-Seed>
      <Num-Episodes>1000</Num-Episodes>
      <Eval-Freq>25</Eval-Freq>
      <Progress-Update-Freq>0.5</Progress-Update-Freq>
      <Episode-Length>200.0</Episode-Length>
    </Experiment>
    <SimGod>
      <Gamma>0.9</Gamma>
      <Experience-Replay>
        <Buffer-Size>1000</Buffer-Size>
        <Update-Batch-Size>10</Update-Batch-Size>
      </Experience-Replay>
      <State-Feature-Map>
        <Type>
          <RBF-State-Grid>
            <RBF-Grid-Dimension>
              <Num-Features>5000</Num-Features>
              <Variable>v-deviation</Variable>
              <Distribution>linear</Distribution>
            </RBF-Grid-Dimension>
          </RBF-State-Grid>
        </Type>
      </State-Feature-Map>
      <Action-Feature-Map>
        <Type>
          <RBF-Action-Grid>
            <RBF-Grid-Dimension>
              <Num-Features>100</Num-Features>
              <Variable>u-thrust</Variable>
              <Distribution>linear</Distribution>
            </RBF-Grid-Dimension>
          </RBF-Action-Grid>
        </Type>
      </Action-Feature-Map>
      <Simion>
        <Type>
          <Q-Learning>
            <Q-Function>
              <Init-Value>0.0</Init-Value>
            </Q-Function>
            <E-Traces>
              <Threshold>0.001</Threshold>
              <Lambda>0.9</Lambda>
              <Replace>true</Replace>
            </E-Traces>
            <Policy>
              <Policy>
                <Epsilon-Greedy>
                  <Epsilon>
                    <Schedule>
                      <Simple-Linear-Decay>
                        <Initial-Value>0.6</Initial-Value>
                        <End-Value>0.0</End-Value>
                      </Simple-Linear-Decay>
                    </Schedule>
                  </Epsilon>
                </Epsilon-Greedy>
              </Policy>
            </Policy>
            <Alpha>
              <Schedule>
                <Constant>
                  <Value>0.001</Value>
                </Constant>
              </Schedule>
            </Alpha>
          </Q-Learning>
        </Type>
      </Simion>
    </SimGod>
  </RLSimion>
</RLSimion>
