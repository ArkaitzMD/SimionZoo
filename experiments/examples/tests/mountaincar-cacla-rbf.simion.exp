<RLSimion FileVersion="1.0.0.0">
<RLSimion>
	<Log>
		<Log-Freq>0.25</Log-Freq>
		<Log-eval-episodes>true</Log-eval-episodes>
		<Log-training-episodes>false</Log-training-episodes>
	</Log>
	<World>
		<Num-Integration-Steps>4</Num-Integration-Steps>
		<Delta-T>0.25</Delta-T>
		<Dynamic-Model>
			<Model>
		<Mountain-car>
		</Mountain-car>
		</Model>
		</Dynamic-Model>
	</World>
	<Experiment>
		<Random-Seed>1</Random-Seed>
		<Num-Episodes>1000</Num-Episodes>
		<Eval-Freq>50</Eval-Freq>
		<Progress-Update-Freq>1.0</Progress-Update-Freq>
		<Episode-Length>5000</Episode-Length>
	</Experiment>
	<SimGod>
		<Target-Function-Update-Freq>100</Target-Function-Update-Freq>
		<Gamma>1.0</Gamma>
		<Freeze-Target-Function>true</Freeze-Target-Function>
		<Use-Importance-Weights>true</Use-Importance-Weights>
		<State-Feature-Map>
		  <Num-Features-Per-Dimension>10</Num-Features-Per-Dimension>
		  <Input-State><Input-State>position</Input-State></Input-State>
		  <Input-State><Input-State>velocity</Input-State></Input-State>
		  <Feature-Mapper>
		    <Type>
		      <Tile-Coding>
			<Num-Tiles>5</Num-Tiles>
			<Tile-Offset>0.1</Tile-Offset>
		      </Tile-Coding>
		    </Type>
		  </Feature-Mapper>
		</State-Feature-Map>
		<Simion>
        <Type>
          <Actor-Critic>
            <Actor>
              <Output>
                <Policy-Learner>
                  <CACLA>
                    <Alpha>
                      <Schedule>
                        <Constant>
                          <Value>0.1</Value>
                        </Constant>
                      </Schedule>
                    </Alpha>
                    <Policy>
                      <Policy>
                        <Deterministic-Policy-Gaussian-Noise>
                          <Output-Action>pedal</Output-Action>
                          <Deterministic-Policy-VFA>
                            <Init-Value>0.0</Init-Value>
                          </Deterministic-Policy-VFA>
                          <Exploration-Noise>
                            <Noise>
                              <Ornstein-Uhlenbeck>
                                <Mu>0.0</Mu>
                                <Sigma>1.0</Sigma>
                                <Theta>0.5</Theta>
                                <Scale>
                                  <Schedule>
                                    <Simple-Linear-Decay>
                                      <Initial-Value>1.0</Initial-Value>
                                      <End-Value>0.1</End-Value>
                                    </Simple-Linear-Decay>
                                  </Schedule>
                                </Scale>
                              </Ornstein-Uhlenbeck>
                            </Noise>
                          </Exploration-Noise>
                        </Deterministic-Policy-Gaussian-Noise>
                      </Policy>
                    </Policy>
                  </CACLA>
                </Policy-Learner>
              </Output>
            </Actor>
            <Critic>
              <Critic>
                <TD-Lambda>
                  <Alpha>
                    <Schedule>
                      <Constant>
                        <Value>0.1</Value>
                      </Constant>
                    </Schedule>
                  </Alpha>
                  <V-Function>
                    <Init-Value>0.0</Init-Value>
                  </V-Function>
                </TD-Lambda>
              </Critic>
            </Critic>
          </Actor-Critic>
        </Type>
		</Simion>
	</SimGod>
</RLSimion>
</RLSimion>
