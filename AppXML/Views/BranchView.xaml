<UserControl x:Class="AppXML.Views.BranchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:v="clr-namespace:AppXML.Views"
             xmlns:vm="clr-namespace:AppXML.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <TreeView BorderBrush="white" BorderThickness="0">
            
            <TreeViewItem>
                <TreeViewItem.Header>
                    <Label Content="{Binding Name}" ToolTip="{Binding Comment }"></Label>
                </TreeViewItem.Header>
                <CheckBox Content="SET AS NULL" Visibility="{Binding IsOptionalVisible}" IsChecked="{Binding IsNull}"></CheckBox>
                <ContentControl x:Name="Class" IsEnabled="{Binding IsEnabled}"></ContentControl>
            </TreeViewItem>

        </TreeView>
        
    </Grid>
</UserControl>
